<?xml version="1.0" encoding="utf-8"?>
<com.mbonnin.treedo.ItemView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_87"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/item_background"
        android:id="@+id/container">
        <RelativeLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="6dp"
            android:paddingRight="4dp"
            >
            <FrameLayout android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"/>
            <com.mbonnin.treedo.ItemEditText
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:background="@null"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textImeMultiLine|textCapSentences|textMultiLine|textNoSuggestions"
                android:singleLine="false"
                android:gravity="center_vertical"
                android:textColor="@color/black_87"
                android:textColorHint="@color/black_54"
                android:layout_centerInParent="true"
                android:paddingLeft="6dp"
                android:layout_toRightOf="@+id/left"
                android:layout_toLeftOf="@+id/right"
                />
            <FrameLayout
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/black_26"/>
    </LinearLayout>
</com.mbonnin.treedo.ItemView>
